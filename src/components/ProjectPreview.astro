---
import type { CollectionEntry } from "astro:content";

import { Image } from "@astrojs/image/components";

interface Props {
  project: CollectionEntry<"projects">;
}

const { data, slug } = Astro.props.project;
---

<div>
  <a href={`/projects/${slug}`}>
    <div
      class="mt-3 rounded-lg py-5 lg:px-5 transition hover:bg-gray-200 dark:hover:bg-gray-800"
    >
      <h3 class="mx-3 text-lg font-semibold">{data.title}</h3>
      <p class="mx-3 mb-3 text-sm text-gray-800 dark:text-gray-300">
        {data.description}
      </p>
      <a
        class="mx-3 text-sm font-semibold text-sky-500 dark:text-sky-400"
        href={`/projects/${slug}`}>Learn more</a
      >
    </div>
  </a>
</div>
