---
import type { CollectionEntry } from "astro:content";

import { Image } from "@astrojs/image/components";

interface Props {
  project: CollectionEntry<"projects">;
}

const { data, slug } = Astro.props.project;
---

<a
  href={`/projects/${slug}`}
  class="mt-3 block rounded-lg max-w-2xl px-3 py-5 transition hover:bg-gray-200 dark:hover:bg-gray-800 lg:px-5 group"
>
  <h3 class="mx-3 text-lg font-semibold">{data.title}</h3>
  <p class="mx-3 my-3 text-sm text-gray-800 dark:text-gray-300">
    {data.description}
  </p>
  <p class="mx-3 text-sm text-gray-800 dark:text-gray-300 group-hover:text-sky-500">Read more</p>
</a>
