---
interface Props {
  title: string;
  tagline?: string;
  href?: string;
}

const { title } = Astro.props;
---

<header>
  <div class="max-w-2xl">
    <h1
      class="bg-gradient-to-r from-sky-500 via-purple-500 to-sky-500 bg-clip-text py-2 text-4xl font-bold tracking-tight text-transparent sm:text-5xl"
    >
      {title}
    </h1>
  </div>
  <slot />
</header>
