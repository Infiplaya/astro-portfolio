---
interface Props {
  title: string;
  tagline?: string;
  href?: string;
}

const { tagline, title, href } = Astro.props;
---

<header>
  <div class="text-center lg:text-left mt-3">
    <h1 class="text-4xl lg:text-5xl font-bold tracking-tighter">{title}</h1>
    {
      tagline && (
        <p class="text-slate-700 xl:pt-2 indent-4 tracking-wide mt-3 dark:text-slate-300">
          {tagline}
          {href && (
            <a
              href={href}
              class="font-bold text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-lime-600 hover:from-orange-300 hover:to-lime-500"
            >
              Check about me
            </a>
          )}
        </p>
      )
    }
  </div>
  <slot />
</header>
