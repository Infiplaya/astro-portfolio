---
interface Props {
  title: string;
  tagline?: string;
  align?: "start" | "center";
}

const { tagline, title } = Astro.props;
---

<header>
  <div class="text-center xl:text-left">
    <h1 class="text-4xl lg:text-5xl font-bold tracking-tighter">{title}</h1>
    {
      tagline && (
        <p class="text-slate-700 text-lg sm:text-xl leading-relaxed mt-3 dark:text-slate-300">
          {tagline}
        </p>
      )
    }
  </div>
  <slot />
</header>
