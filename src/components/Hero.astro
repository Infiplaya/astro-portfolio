---
interface Props {
  title: string;
  tagline?: string;
  align?: "start" | "center";
}

const { tagline, title } = Astro.props;
---

<header>
  <div class="text-center px-8 md:px-12 h-full lg:text-left items-center xl:max-w-xl">
    <h1 class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-semibold tracking-tighter">{title}</h1>
    {
      tagline && (
        <p class="text-slate-700 text-lg sm:text-xl xl:text-2xl mt-3 dark:text-slate-300">
          {tagline}
        </p>
      )
    }
  </div>
  <slot />
</header>
