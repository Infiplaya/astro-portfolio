---
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"work">;
}

const { data, slug } = Astro.props.project;
---

<a href={`/work/${slug}`} class="relative mt-10">
  <span
    class="font-semibold tracking-tighter text-zinc-900 absolute top-5 left-5 bg-orange-400 py-1 px-3 rounded-lg"
    >{data.title}</span
  >
  <img
    src={data.img}
    alt={data.img_alt || ""}
    loading="lazy"
    decoding="async"
    class="w-full object-cover shadow-md dark:shadow-zinc-700 rounded-lg"
    width="1472"
    height="871"
  />
</a>
