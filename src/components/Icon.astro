---
import type { HTMLAttributes } from 'astro/types';
import { iconPaths } from './IconPaths';

export interface Props {
	icon: keyof typeof iconPaths;
	color?: string;
	gradient?: boolean;
	size?: string;
	classNames?: string;
}

const { color = 'currentcolor', icon, size, classNames } = Astro.props;
const iconPath = iconPaths[icon];

const attrs: HTMLAttributes<'svg'> = {};
if (size) attrs.style = { '--size': size };

---

<svg
	xmlns="http://www.w3.org/2000/svg"
	width="28"
	height="28"
	viewBox="0 0 256 256"
	aria-hidden="true"
	stroke={color}
	class={`dark:stroke-slate-200 stroke-slate-800 ${classNames}`}
	{...attrs}
>
	<g set:html={iconPath} />
</svg>

