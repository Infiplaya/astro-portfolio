---
import { Icon } from "astro-icon";

const { skill, icon } = Astro.props;
---

<div
  class="inline-flex items-center gap-2 rounded-xl border border-gray-900/25 bg-gray-100 p-3 text-xs font-semibold uppercase tracking-wider shadow-inner shadow-sky-500/25 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-100"
>
  <Icon name={icon} class="w-6 h-6 p-1 bg-white/10 rounded-lg" />
  {skill}
</div>
