---
import SkillButton from "./SkillButton.astro";
const skills = [
  {
    icon: "logos:javascript",
    skill: "Javascript",
  },
  {
    icon: "logos:html-5",
    skill: "HTML",
  },
  {
    icon: "logos:css-3",
    skill: "CSS",
  },
  {
    icon: "logos:typescript-icon",
    skill: "Typescript",
  },
  {
    icon: "logos:react",
    skill: "React",
  },
  {
    icon: "logos:redux",
    skill: "Redux",
  },
  {
    icon: "logos:nextjs",
    skill: "Next.js",
  },
];
---

<div class="mt-12 flex overflow-hidden py-10">
  <ul class="flex shrink-0 animate-marquee gap-8">
    {
      skills.map((item) => (
        <li class="shrink-0">
          <SkillButton skill={item.skill} icon={item.icon} />
        </li>
      ))
    }
  </ul>
  <ul class="flex shrink-0 animate-marqueeSlow gap-8 pl-8" aria-hidden="true">
    {
      skills.map((item) => (
        <li class="shrink-0">
          <SkillButton skill={item.skill} icon={item.icon} />
        </li>
      ))
    }
  </ul>
  <ul class="flex shrink-0 animate-marqueeSlow gap-8 pl-8" aria-hidden="true">
    {
      skills.map((item) => (
        <li class="shrink-0">
          <SkillButton skill={item.skill} icon={item.icon} />
        </li>
      ))
    }
  </ul>
  <ul class="flex shrink-0 animate-marqueeSlow gap-8 pl-8" aria-hidden="true">
    {
      skills.map((item) => (
        <li class="shrink-0">
          <SkillButton skill={item.skill} icon={item.icon} />
        </li>
      ))
    }
  </ul>
</div>
