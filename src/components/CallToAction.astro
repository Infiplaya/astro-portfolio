---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a href={href}>
  <div class="relative group">
    <div
    class="absolute -z-10 -inset-0.5 bg-gradient-to-r from-orange-600 to-lime-600 rounded-lg blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"
  >
  </div>
  <slot />
  </div>
  
  </a
>
