---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";

const projects = (await getCollection("work")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
  title="My Work | Paweł Sobaniec"
  description="Learn about Paweł Sobaniec's most recent projects"
>
  <div
    class="container mx-auto px-8 md:px-12 lg:px-20 py-4 md:py-8 lg:py-12"
  >
    <main class="lg:mt-20 mt-10">
      <Hero
        title="My Work"
        tagline="See my most recent projects below to get an idea of my past experience."
      />
      <Grid variant="offset">
        {
          projects.map((project) => (
            <li>
              <PortfolioPreview project={project} />
            </li>
          ))
        }
      </Grid>

      <section class="px-8 py-6 md:px-12 md:py-8 my-10">
        <h2 class="text-xl font-semibold text-center">Other stuff</h2>
        <p class="text-center">
          Not so polished bits of code too small to call them projects. But I
          had fun working on them.
        </p>
      </section>
    </main>
  </div>
  <ContactCTA />
</BaseLayout>
